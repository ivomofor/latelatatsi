@model CasualEmployee


<div class="panel panel-success">
    <div class="panel-heading text-center"><h4>New Casual Employee</h4></div>
    <div class="panel-body">
        @if (ViewBag.Message != null)
        {
            <div class="alert alert-success alert-dismissible" style="margin-top:20px">
                @ViewBag.Message
            </div>
        }
    <form class="p-a-1" asp-action="CreateEmployee" method="post">
        <div class="form-group">

            <label asp-for="FirstName"></label>
            <input class="form-control" asp-for="FirstName" required />
            <div><span asp-validation-for="FirstName"></span></div>
        </div>
        <div class="form-group">

            <label asp-for="LastName"></label>
            <input class="form-control" asp-for="LastName" required />
            <div><span asp-validation-for="LastName"></span></div>
        </div>
        <div class="form-group">

            <label asp-for="Email"></label>
            <input class="form-control" asp-for="Email" />
            <div><span asp-validation-for="Email" style="color:firebrick"></span></div>
        </div>
        <div class="form-group">

            <label asp-for="Role"></label>
            <select asp-for="Role" class="form-control" required>
                <option value="">Select Role</option>
                <option value="Role Level 1">Role Level 1</option>
                <option value="Role Level 2">Role Level 2</option>
            </select>
            <div><span asp-validation-for="Role"></span></div>
        </div>
        <div class="form-group">

            <label asp-for="RatePerHour"></label>
            <input class="form-control" asp-for="RatePerHour" />
            <div><span asp-validation-for="RatePerHour"></span></div>
        </div>
        <div class="form-group">

            <label asp-for="Task"></label>
            <select asp-for="Task" class="form-control" required>
                <option value="">Select A Task</option>
                <option value="Task1">Task 1</option>
                <option value="Task1">Task 2</option>
                <option value="Task1">Task 3</option>
            </select>
            <div><span asp-validation-for="Task"></span></div>
        </div>
        <div class="text-center">
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
            <button class="btn btn-primary" type="submit">
                Submit
            </button>
        </div>

    </form>
    </div>
</div>
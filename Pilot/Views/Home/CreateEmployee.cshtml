@model Employee


<div class="panel panel-success">
    <div class="panel-heading text-center"><h4>New Employee</h4></div>
    <div class="panel-body">
        @if (ViewBag.Message != null)
        {
            <div class="alert alert-success alert-dismissible" style="margin-top:20px">
                @ViewBag.Message
            </div>
        }
    <form class="p-a-1" asp-action="CreateEmployee" method="post" enctype="multipart/form-data">
        <div class="form-group">

            <label asp-for="FirstName"></label>
            <input class="form-control" asp-for="FirstName" />
            <div><span asp-validation-for="FirstName" style="color:firebrick"></span></div>
        </div>
        <div class="form-group">

            <label asp-for="LastName"></label>
            <input class="form-control" asp-for="LastName" />
            <div><span asp-validation-for="LastName" style="color:firebrick"></span></div>
        </div>
        <div class="form-group">

            <label asp-for="Email"></label>
            <input class="form-control" asp-for="Email" />
            <div><span asp-validation-for="Email" style="color:firebrick"></span></div>
        </div>
        <div class="form-group">

            <label asp-for="RatePerHour"></label>
            <input class="form-control" asp-for="RatePerHour" />
            <div><span asp-validation-for="RatePerHour" style="color:firebrick"></span></div>
        </div>
        <div class="form-group">
            <div><span></span></div>
            <label>Upload Picture</label>
            <input type="file" name="file" class="form-control" required />
        </div>
        <div class="text-center">
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
            <button class="btn btn-primary" type="submit">
                Submit
            </button>
        </div>
    </form>
    </div>
</div>